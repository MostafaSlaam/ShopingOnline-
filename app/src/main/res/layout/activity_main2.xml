<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/zz"
    tools:context="com.example.mostafa.slaamonlineshopping.Main2Activity">
<android.support.design.widget.AppBarLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/AppB"
    >

        <SearchView
        android:id="@+id/SV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/b_add"
        >

    </SearchView>

</android.support.design.widget.AppBarLayout>


    <RelativeLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/AppB">

        <TextView
            android:id="@+id/TV_hi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="14dp"
            android:text="Hi" />

        <Spinner
            android:id="@+id/spinner"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/textView3"
            android:layout_marginStart="14dp"
            android:layout_marginTop="27dp"
            android:entries="@array/categories" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/spinner"
            android:layout_alignTop="@+id/TV_hi"
            android:text="Category" />

        <TextView
            android:id="@+id/textView8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignTop="@+id/TV_hi"
            android:layout_marginEnd="34dp"
            android:text="Products" />

        <Spinner
            android:id="@+id/spinner2"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignTop="@+id/spinner" />

        <TextView
            android:id="@+id/textView9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/spinner"
            android:layout_below="@+id/spinner"
            android:layout_marginStart="35dp"
            android:layout_marginTop="34dp"
            android:text="selected Product" />

        <TextView
            android:id="@+id/TV_selected"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/textView9"
            android:layout_alignStart="@+id/textView9"
            android:layout_below="@+id/textView9"
            android:layout_marginTop="18dp" />

        <TextView
            android:id="@+id/textView11"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/ET_q"
            android:layout_alignBottom="@+id/ET_q"
            android:layout_toEndOf="@+id/TV_hi"
            android:text="Quintity" />

        <EditText
            android:id="@+id/ET_q"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/textView8"
            android:layout_below="@+id/textView9"
            android:ems="10"
            android:inputType="numberDecimal" />

        <Button
            android:id="@+id/b_add"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_below="@+id/ET_q"
            android:layout_marginEnd="16dp"
            android:layout_marginTop="14dp"
            android:text="Add to My Order" />

        <ListView
            android:id="@+id/L_view"
            android:layout_width="200dp"
            android:layout_height="150dp"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/b_add"
            android:layout_marginTop="14dp" />

        <Button
            android:id="@+id/B_done"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="26dp"
            android:layout_toEndOf="@+id/TV_selected"
            android:text="Done" />

        <TextView
            android:id="@+id/textView10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/ET_q"
            android:text="Total" />

        <TextView
            android:id="@+id/TV_total"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/spinner"
            android:layout_below="@+id/textView10"
            android:layout_marginStart="17dp"
            android:layout_marginTop="11dp" />

        <ListView
            android:id="@+id/LV_results"
            android:layout_width="140dp"
            android:layout_height="150dp"
            android:layout_alignTop="@+id/L_view"
            android:layout_toEndOf="@+id/B_done" />
    </RelativeLayout>
</RelativeLayout>
